<head>
  <link href="https://fonts.googleapis.com/css2?family=Bitter&display=swap" rel="stylesheet">
</head>

<body>
 <div class="listing-header">
   <h5>Showing <%= @venues.count %> event venues </h5>
 </div>
<div class="container">
 <div class="listings-list">
    <% @venues.each do |venue| %>
        <div class="card-listing">
          <img src= 'https://50nx67a44a-flywheel.netdna-ssl.com/wp-content/uploads/2018/05/Southwark--1024x683.jpg'/>
            <br /><br />
            <div class="card-listing-infos">
              <h2> <%= venue.name %> </h2>
               <br /><br />
              <p> <%= venue.address %> </p>
              <p> Capacity : <%= venue.capacity %> </p>
               <br /><br />
              <h2 class="card-listing-link"><%= link_to 'View listing', venue_path(venue) %></h2>

            </div>
      </div>
  <% end %>
</div>
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

</div>
</body>
