<div class="container margin-top-negative" id="card">
  <div class="row">
    <div class="col-8">
      <div class="venue-show-card">
        <div id="name">
          <h1><%= @venue.name %></h1>
        </div>
         <div id="address">
           <h6>Location</h6>
          <p><%= @venue.address %></p>
        </div>
      </div>
      <div class="venue-show-card">
        <div id="description">
          <h6>Description</h6>
          <p><%= @venue.description %></p>
        </div>
      </div>
      <h6>Amenities</h6>
      <div class= buttons-flex>
      <div id= listing-button> <button type="button" class="btn btn-outline-secondary">MAP LOCATION</button> </div>
      <div id= listing-button> <button type="button" class="btn btn-outline-secondary">PHOTOS</button> </div>
      </div>
    </div>

<div class="col-4">
  <div class="venue-show-card">
    <h5>Book this place!</h5>
    <div class= "input-group" >
        <%= simple_form_for([@venue, @booking]) do |f| %>
    <%= f.input :date %>
    <%= f.submit "Book ",
     class: "btn btn-warning mt-2" %>  <% end %>
     </div>
  </div>



 <div class="venue-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <i class="material-icons mr-2">Capacity</i><span><%= "#{@venue.capacity} guests" %></span>
          </div>

          <div class="flex ml-3">
            <i class="material-icons mr-2">$$$</i>
          </div>
        </div>
      </div>

<div class="venue-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fab fa-facebook-square fa-2x mr-2"></i>
            <i class="fab fa-twitter-square fa-2x mr-2"></i>
            <i class="fab fa-pinterest-square fa-2x mr-2"></i>
            <i class="fa fa-envelope-square fa-2x"></i>
          </div>
        </div>
     </div>
  </div>
  </div>

 <div class="list-group">
        <% @reviews.each do |review| %>
          <li class="list-group-item">
            <small>
              <% count = 0 %>
              <% 5.times do %>
                <% if review.rating > count %>
                  <i class="fas fa-star"></i>
                <% else %>
                  <i class="far fa-star"></i>
                <% end %>
                <% count += 1 %>
              <% end %>
            </small>
            <p><%= review.content %></p>
          </li>
        <% end %>
      </div>
    </div>


